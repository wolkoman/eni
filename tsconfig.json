{
  "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/store/*": ["app/(store)/*"],
        "@/domain/*": ["app/(domain)/*"],
        "@/app/*": ["app/*"],
        "@/util/*": ["util/*"],
        "@/components/*": ["components/*"]
      },
    "typeRoots": [
      "./util/types",
      "./node_modules/@types"
    ],
    "target": "es2015",
    "lib": [
      "DOM",
      "DOM.iterable",
      "es2021"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app",
    "src",
    "pages",
    "components",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
